<%/*
 * To use this, do something like this:
 *
 *     var repsSorted = [ parse.loadSummary('c', 20140101000000),
 *                        parse.loadSummary('d', 20140102000000) ]
 *
 * Then include this file. The input array of summaries must be in
 * `repsSorted`.
 */%>

<% var now = moment.utc() %>
<% for (var i = 0; i < repsSorted.length; i++) { %>
  <% var rep = repsSorted[i] %>
  <% var repClass = '' %>
  <% var repMoment = ts.getMoment(rep.date) %>
  <% if (now.unix() < repMoment.unix() + ts.recentAge) {
      repClass = 'recent'
    } else if (now.unix() > repMoment.unix() + ts.ancientAge) {
      repClass = 'ancient'
    } else if (now.unix() > repMoment.unix() + ts.hiddenAge) {
      continue
    } %>
  <tr class="<%= repClass %>">
    <td><%= repMoment.fromNow() %></td>
    <td><%= rep.rev %></td>
    <td><%= rep.subarch %></td>
    <td><%= rep.os %></td>
    <td><%= rep.cc %></td>
    <td><%= rep.nwarn %></td>
    <td class="<%= rep.rclass %>">
      <a href="<%= '/report/' + slot + '/' + rep.date %>">
        <%= rep.rtext %>
      </a>
    </td>
  </tr>
<% } %>
