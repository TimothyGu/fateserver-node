<%/*
 * To use this, do something like this:
 *
 *     l.reps = [ parse.loadSummary('c', 20140101000000)
 *              , parse.loadSummary('d', 20140102000000)
 *              ]
 *
 * Then include this file. The input array of summaries must be in
 * `l.reps`.
 */%>

<% var now = l.moment.utc() %>
<% propsToDisplay = propsToDisplay || [
                        'date', 'rev', 'subarch', 'os'
                      , 'cc', 'nwarn', 'results'
                      ] %>
<% extraClasses = extraClasses || {} %>

<% var headings = {
     date      : 'Time'
   ,'date-link': 'Time'
   , rev       : 'Revision'
   , subarch   : 'Arch'
   , os        : 'OS'
   , cc        : 'Compiler'
   , comment   : 'Comment'
   , nwarn     : 'Warnings'
   , results   : 'Results'
   } %>

<thead><tr>
<% for (var j = 0; j < propsToDisplay.length; j++) { %>
  <% var prop = propsToDisplay[j] %>
  <th <%- extraClasses[prop] ? 'class="' + extraClasses[prop] + '"'
                             : '' %>>
  <% if (l.sortEnabled) { %>
    <a href="?sort=<%= l.sort && l.sort[1] === propsToDisplay[j]
                     ? l.sort[2]
                     : propsToDisplay[j] %>">
      <%= headings[propsToDisplay[j]] %>
    </a>
  <% } else { %>
    <%= headings[propsToDisplay[j]] %>
  <% } %>
  </th>
<% } %>
</tr></thead>

<tbody>
<% for (var i = 0; i < l.reps.length; i++) { %>
  <% var rep = l.reps[i] %>
  <% var repClass = '' %>
  <% var repMoment = l.ts.getMoment(rep.date) %>
  <% if (now.unix() < repMoment.unix() + l.ts.RECENT_AGE) {
      repClass = 'recent'
    } else if (now.unix() > repMoment.unix() + l.ts.ANCIENT_AGE) {
      repClass = 'ancient'
    } else if (now.unix() > repMoment.unix() + l.ts.HIDDEN_AGE) {
      continue
    } %>
  <tr class="<%= repClass %>">
    <% for (var j = 0; j < propsToDisplay.length; j++) { %>
      <% var prop = propsToDisplay[j] %>
      <% var htmlClasses = (extraClasses[prop] || '')
                         + (prop === 'results' ? rep.rclass : '') %>
      <% htmlClasses = htmlClasses ? 'class="' + htmlClasses + '"'
                                   : '' %>
      <td <%- htmlClasses %>>
      <% if (prop === 'date') { %>
        <%= l.ts.formatDate(repMoment) %>
      <% } else if (prop === 'date-link') { %>
        <a href="<%= '/history/' + rep.slot %>"
           title="View history for <%= rep.slot %>"
           aria-label="View history for this slot">
          <%= l.ts.formatDate(repMoment) %>
        </a>
      <% } else if (prop === 'rev') { %>
        <%- l.config.linkGitHist(rep.rev) %>
      <% } else if (prop === 'results') { %>
        <a href="<%= '/report/' + rep.slot + '/' + rep.date %>">
          <%= rep.rtext %>
        </a>
      <% } else { %>
        <%= rep[prop] %>
      <% } %>
      </td>
    <% } %>
  </tr>
<% } %>
</tbody>
