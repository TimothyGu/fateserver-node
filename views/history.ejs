<% var repsSorted = reps.sort(ts.sortByDate)
                        .reverse()
                        .slice(begin, begin + nEntries) %>

<% include header1.ejs %>
<title>Slot <%= slot %> - <%= config.branding %> FATE</title>
<% include header2.ejs %>
Report history for <%= slot %>
<% include header3.ejs %>
<div class="table-responsive">
  <table class="table" id="config">
    <thead>
      <tr><th colspan="2">Information of the Last Run</th></tr>
    </thead>
    <tbody>
      <tr>
        <th>Owner</th>
        <td><%= owner %></td>
      </tr>
      <tr>
        <th>Architecture</th>
        <td><%= repsSorted[0].subarch %></td>
      </tr>
      <tr>
        <th>OS</th>
        <td><%= repsSorted[0].os %></td>
      </tr>
      <tr>
        <th>Compiler</th>
        <td><%= repsSorted[0].cc %></td>
      </tr>
      <tr>
        <th>Configuration</th>
        <td><code><%- util.formatConfig(repsSorted[0].config) %></code></td>
      </tr>
      <tr>
        <th>Comment</th>
        <td><%= repsSorted[0].comment %></td>
      </tr>
    </tbody>
  </table>
</div>

<div class="table-responsive">
  <table class="replist table table-bordered" id="history">
    <thead>
      <tr>
        <th>Time</th>
        <th>Rev</th>
        <th>Warnings</th>
        <th>Tests</th>
      </tr>
    </thead>
    <tbody>
      <% var propsToDisplay = ['date', 'rev', 'nwarn', 'results'] %>
      <% include replist.ejs %>
    </tbody>
  </table>
  <% if (begin !== 0) { %>
    <% var prevBegin = Math.max(0, begin - nEntries) %>
    <a href="/history/<%= slot %>?begin=<%= prevBegin %>">Previous</a>
  <% } %>
  <% if (total > begin + nEntries) { %>
    <a href="/history/<%= slot %>?begin=<%= begin + nEntries %>">Next</a>
  <% } %>
</div>
<% include footer.ejs %>

