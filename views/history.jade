include ./utils.jade
//- include ./replist.jade

extends ./layout.jade

block head
  title Slot #{slot} - #{config.branding} FATE

block title
  Report history for #{slot}

block content
  .table-responsive
    table.table#config
      thead: tr
        th(colspan='2') Information of the Last Run
      tbody
        tr
          th Owner
          td= owner
        tr
          th Architecture
          td= reps[0].subarch
        tr
          th OS
          td= reps[0].os
        tr
          th Compiler
          td= reps[0].cc
        tr
          th Configuration
          td: code
            +formatConfig(reps[0].config)
        tr
          th Comment
          td= reps[0].comment

  .table-responsive
    table(class='replist table table-bordered', id='history')
      thead: tr
        th Time
        th Rev
        th Warnings
        th Tests
    tbody
      - var propsToDisplay = ['date', 'rev', 'nwarn', 'results']
      //- +replist(propsToDisplay, reps)

  nav
    ul.pager
      if begin !== 0
        - var prevBegin = Math.max(0, begin - nEntries)
        li: a(href='/history/' + slot + '?begin=' + prevBegin) Previous
      else
        li.disabled: a(href='#') Previous

      if total > begin + nEntries
        - var nextBegin = begin + nEntries
        li: a(href='/history/' + slot + '?begin=' + nextBegin) Next
      else
        li.disabled: a(href='#') Next
